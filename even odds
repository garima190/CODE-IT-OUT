#include <iostream>
using namespace std;
int main()
{
	long long int n,k;
	cin>>n>>k;
	if(n%2==0)
	{
		if(k<=n/2)
		{
			long long int l=1+((k-1)*2);
			cout<<l;
		}
		else
		{
			k=k-(n/2);
			long long int l=2+((k-1)*2);
			cout<<l;
		}
	}
	else
	{
		if(k<=((n/2)+1))
		{
			long long int l=1+((k-1)*2);
			cout<<l;
		}
		else
		{
			k=k-((n/2)+1);
			long long int l=2+((k-1)*2);
			cout<<l;
		}
	}
	return 0;
}
                
